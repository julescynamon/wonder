{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="block">

        <h2 class="pb-20">Connexion</h2>

        <form action="{{ path('login') }}" method="post">
            <div class="form-row">
                <label for="email">*Votre Email</label>
                <input type="email" name="_username" id="email" value="{{ username }}" autofocus>
            </div>
            <div class="form-row">
                <label for="email">*Votre Mot de passe</label>
                <input type="password" name="_password" id="pasword">
            </div>
            <div class="form-row">
                <label for="remember_me">
                <input type="checkbox" name="_remember_me" id="remember_me">
                Se souvenir de moi</label>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            {% if error %}
                <ul class="form-errors pb-20">
                    <li>{{ error.messageKey|trans(error.messageData, 'security') }}</li>
                </ul>
            {% endif %}
            <div class="d-flex flex-row-nowrap align-item-center">
                <button class="btn btn-primary xs-btn">Se Connecter</button>
                <div class="d-flex flex-column ml-10">
                    <p class="mt-10 xs-font">Vous n'avez pas de un compte ? Inscrivez vous <a class="redirect" href="{{ path('signup') }}">içi</a></p>
                    <p class="mt-10 xs-font">Vous avez oublié votre mot de passe , cliquez <a class="redirect" href="{{ path('reset-password-request') }}">içi</a></p>
                </div>
            </div>
        </form>

        

    </div>
{% endblock %}