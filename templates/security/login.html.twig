{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="block">

        <h2 class="pb-20">Connexion</h2>

        <form action="{{ path('login') }}" method="post">
            <div class="form-row">
                <label for="email">*Votre Email</label>
                <input type="email" name="_username" id="email" value="{{ username }}" autofocus>
            </div>
            <div class="form-row">
                <label for="email">*Votre Mot de passe</label>
                <input type="password" name="_password" id="pasword">
            </div>
            <div class="form-row">
                <label for="remember_me">
                <input type="checkbox" name="_remember_me" id="remember_me">
                Se souvenir de moi</label>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            {% if error %}
                <ul class="form-errors pb-20">
                    <li>{{ error.messageKey|trans(error.messageData, 'security') }}</li>
                </ul>
            {% endif %}
            <button class="btn btn-primary">Se Connecter</button>
            <p class="mt-10">Vous n'avez pas de un compte ? Inscrivez vous <a class="redirect" href="{{ path('signup') }}">i√ßi</a></p>
        </form>

        

    </div>
{% endblock %}