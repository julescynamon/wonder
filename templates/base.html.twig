        <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">
    </head>
    <body class="d-flex flex-column">
        <header class="b1">header</header>
        <div class="flex-fill d-flex flex-row-nowrap justify-content-center">
            <div class="content d-flex flex-row-nowrap flex-fill">
                <div class="sidebar b3">sidebar</div>
                <div class="flex-fill b2">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
        <footer class="b4">footer</footer>
    </body>
</html>
